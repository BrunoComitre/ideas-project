{
    "name": "monorepo-open-bar",
    "version": "independent",
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "private": true,
    "license": "MIT",
    "scripts": {
        "clean": "rimraf ./packages/*/dist",
        "build": "tsc --build",
        "lint": "eslint . -f codeframe",
        "pretest": "yarn build && yarn lint",
        "test": "yarn test:only",
        "test:only": "mocha \"packages/*/dist/test/**/*.spec.js\"",
        "start": "yarn start:client",
        "start:client": "yarn workspace @sample/app start",
        "start:server": "yarn workspace @sample/server start",
        "start:shared": "yarn workspace @sample/shared start",
        "prettify": "npx prettier . --write",
        "startar": "tsc"
    },
    "devDependencies": {
        "lerna": "^4.0.0",
        "jest": "26.4.2",
        "jest-haste-map": "26.3.0",
        "jest-resolve": "26.4.0",
        "jest-styled-components": "7.0.3",
        "@types/node": "^16.10.2",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-no-only-tests": "^2.6.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "prettier": "^2.4.1",
        "typescript": "^4.4.3",
        "lint-staged": "10.3.0",
        "webpack": "4.44.1"
    }
}
